@page
@model blog_e18.Pages.Category.Index
@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <h3>Category List</h3>
            <a class="btn btn-success" asp-page="/category/create" role="button">Create</a>
        </div>
        <!-- Blog entries-->
        <div class="col-lg-12">
            @if (Model.Categories.Count() > 0)
            {
                <div class="card p-3">
                    <table id="datatable" class="table table-striped" style="width: 100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Category</th>
                                <th style="width: 200px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Categories)
                            {
                                <tr>
                                    <td>1</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="create_edit.html" role="button">Edit</a>
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Tag</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="border p-3 mt-3">
                    <p class="text-center fs-4">No Data</p>
                </div>
            }
        </div>
    </div>
</div>