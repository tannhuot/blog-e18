@page
@model blog_e18.Pages.Post.Create
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <h3>Create Post</h3>
            <a class="btn btn-success" asp-page="/post/index" role="button">Back</a>
        </div>
        <!-- Blog entries-->
        <div class="col-lg-12">
            <div class="card p-3">
                <form method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="post.Title" class="form-label">Title</label>
                        <input type="text" class="form-control @Model.TitleError" asp-for="post.Title" />
                        <span asp-validation-for="post.Title"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="post.Content" class="form-label">Content</label>
                        <textarea class="form-control" asp-for="post.Content" rows="5"></textarea>
                        <span asp-validation-for="post.Content"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="post.imgFile" class="form-label">Choose Thumbnail</label>
                        <input class="form-control" type="file" asp-for="post.imgFile" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedCategoryId" class="form-label">Category</label>
                        <select class="form-select" asp-for="SelectedCategoryId" aria-label="Default select example"
                            asp-items="Model.CategoryItems">
                            <option selected>Select Category</option>
                        </select>
                        <span asp-validation-for="SelectedCategoryId"></span>
                    </div>
                    <div class="mb-3">
                        <label for="tags" class="form-label">Tag</label>
                        <div class="tag-wrapper">
                            @foreach (var item in Model.Tags)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="SelectedTags" value="@item.Id"
                                        id="@item.Id" />
                                    <label class="form-check-label" for="@item.Id">@item.Name</label>
                                </div>
                            }
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>